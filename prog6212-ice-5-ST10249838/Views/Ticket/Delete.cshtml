@model ICE5.Models.TicketModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h4>TicketModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            ShowtimeId
        </dt>
        <dd class="col-sm-10">
            @Model.ShowtimeId
        </dd>
        <dt class="col-sm-2">
            CustomerName
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>
        <dt class="col-sm-2">
            NumberOfTickets
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfTickets
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
